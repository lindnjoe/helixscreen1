<component>
  <consts>
    <!-- Progress bar height -->
    <px name="progress_height" value="8"/>
  </consts>
  <view name="ams_dryer_card"
        extends="lv_obj" width="100%" height="content" style_pad_all="0" scrollable="false" flex_flow="column"
        style_pad_gap="#space_sm" hidden="true">
    <!-- Fail-safe: Start hidden (dryer unsupported). Binding clears hidden when dryer_supported != 0 -->
    <bind_flag_if_eq subject="dryer_supported" flag="hidden" ref_value="0"/>
    <!-- Inactive state: button with heat wave icon that opens modal -->
    <ui_button name="btn_dryer_start" width="100%" icon="heat_wave" text="Dryer">
      <!-- Hidden when drying IS active -->
      <bind_flag_if_eq subject="dryer_active" flag="hidden" ref_value="1"/>
      <event_cb trigger="clicked" callback="dryer_open_modal_cb"/>
    </ui_button>
    <!-- Active state: temp + progress + stop (shown when drying) -->
    <ui_card name="dryer_active_card"
             width="100%" height="content" style_radius="#border_radius" style_pad_all="#space_sm" flex_flow="column"
             style_flex_main_place="start" style_flex_cross_place="start" style_pad_gap="#space_xs">
      <!-- Hidden when NOT drying -->
      <bind_flag_if_eq subject="dryer_active" flag="hidden" ref_value="0"/>
      <!-- Temperature and time status -->
      <lv_obj name="temp_row"
              width="100%" height="content" style_pad_all="0" flex_flow="row" style_flex_main_place="space_between"
              style_flex_cross_place="center" scrollable="false">
        <!-- Thermometer icon + current temp -->
        <lv_obj width="content"
                height="content" style_pad_all="0" flex_flow="row" style_flex_cross_place="center"
                style_pad_gap="#space_xs" scrollable="false">
          <icon src="thermometer" size="sm" variant="secondary"/>
          <text_body name="dryer_current_temp_label" bind_text="dryer_current_temp_text"/>
        </lv_obj>
        <!-- Time remaining -->
        <text_body name="dryer_time_label" bind_text="dryer_time_text"/>
      </lv_obj>
      <!-- Progress Bar -->
      <lv_obj name="progress_container"
              width="100%" height="#progress_height" style_bg_color="#text_muted" style_bg_opa="38"
              style_radius="#border_radius_small" style_pad_all="0" scrollable="false">
        <!-- Progress fill bar -->
        <lv_obj name="progress_fill"
                height="100%" style_bg_color="#success" style_bg_opa="255" style_radius="#border_radius_small"
                style_pad_all="0" scrollable="false">
          <!-- Width bound to progress_pct via C++ -->
        </lv_obj>
      </lv_obj>
      <!-- Stop Button -->
      <ui_button name="btn_stop_drying" width="100%" height="content" text="Stop Drying" variant="danger">
        <event_cb trigger="clicked" callback="dryer_stop_clicked_cb"/>
      </ui_button>
    </ui_card>
  </view>
</component>
