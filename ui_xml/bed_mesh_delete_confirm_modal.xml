<!-- Bed Mesh Delete Confirmation Modal -->
<component>
  <!-- Full-screen backdrop overlay -->
  <view extends="lv_obj" name="bed_mesh_delete_modal_root"
        width="100%" height="100%"
        style_bg_opa="200" style_border_width="0" style_radius="0" style_pad_all="0"
        align="center" clickable="true">

    <!-- Reactive visibility binding -->
    <lv_obj-bind_flag_if_eq subject="bed_mesh_delete_modal_visible" flag="hidden" ref_value="0"/>

    <!-- Dialog card -->
    <ui_dialog name="dialog_card" width="70%" height="content" align="center"
               flex_flow="column" style_flex_main_place="start" style_pad_gap="0">

      <!-- Content area -->
      <lv_obj width="100%" height="content"
              style_min_height="140"
              style_bg_opa="0" style_border_width="0"
              style_pad_left="#space_lg" style_pad_right="#space_lg"
              style_pad_top="#space_lg" style_pad_bottom="#space_lg"
              flex_flow="column" style_flex_cross_place="center" style_pad_gap="#space_md">

        <!-- Warning icon -->
        <icon src="alert" size="lg" color="#error_color"/>

        <!-- Title -->
        <text_heading text="Delete Profile?" width="100%" style_text_align="center"/>

        <!-- Profile name to delete -->
        <lv_obj width="100%" height="content" flex_flow="row" style_flex_main_place="center"
                style_bg_opa="0" style_border_width="0" style_pad_all="0" style_pad_gap="#space_xs">
          <text_small text="Delete" style_text_color="#text_secondary"/>
          <text_small name="delete_profile_name" bind_text="bed_mesh_delete_profile_name" style_text_color="#error_color"/>
          <text_small text="?" style_text_color="#text_secondary"/>
        </lv_obj>

        <!-- Warning message -->
        <text_small text="This action cannot be undone." width="100%"
                    style_text_align="center" style_text_color="#text_secondary"/>
      </lv_obj>

      <!-- Horizontal divider above buttons -->
      <lv_obj width="100%" height="1"
              style_bg_color="#text_secondary" style_bg_opa="64"
              style_border_width="0" style_pad_all="0"/>

      <!-- Button row -->
      <lv_obj width="100%" height="#button_height"
              style_bg_opa="0" style_border_width="0" style_pad_all="0"
              flex_flow="row">

        <!-- Cancel button -->
        <lv_button name="delete_cancel_btn" flex_grow="1" height="100%"
                   style_radius="#border_radius" style_border_width="0" style_shadow_width="0"
                   clickable="true">
          <event_cb trigger="clicked" callback="on_bed_mesh_delete_cancel"/>
          <text_body text="Cancel" align="center"/>
        </lv_button>

        <!-- Vertical divider -->
        <lv_obj width="1" height="100%"
                style_bg_color="#text_secondary" style_bg_opa="64"
                style_border_width="0" style_pad_all="0"/>

        <!-- Delete button (danger styling) -->
        <lv_button name="delete_confirm_btn" flex_grow="1" height="100%"
                   style_radius="#border_radius" style_border_width="0" style_shadow_width="0"
                   style_bg_color="#error_color"
                   clickable="true">
          <event_cb trigger="clicked" callback="on_bed_mesh_delete_confirm"/>
          <text_body text="Delete" align="center" style_text_color="#card_bg"/>
        </lv_button>
      </lv_obj>
    </ui_dialog>
  </view>
</component>
