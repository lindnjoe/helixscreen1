<component>
  <!-- Bed Mesh Visualization Panel -->
  <!-- Full-screen backdrop with semi-transparent overlay -->
  <view extends="lv_obj" name="bed_mesh_panel_backdrop" width="100%" height="100%" style_bg_opa="180" style_border_width="0" style_pad_all="0" style_radius="0" align="center" clickable="true">
    <!-- Bed mesh panel content (docked right edge) -->
    <lv_obj name="bed_mesh_panel" width="#overlay_panel_width_large" height="100%" align="right_mid" style_pad_all="0" style_border_width="0" scrollable="false" flex_flow="column">
      <!-- Header Bar -->
      <header_bar name="bed_mesh_header" title="Bed Mesh"/>
      <!-- Content Area -->
      <lv_obj name="bed_mesh_content" flex_grow="1" width="100%" style_bg_opa="0" style_pad_all="#padding_normal" scrollable="false" style_border_width="0" flex_flow="column" style_flex_main_place="start" style_flex_cross_place="center" style_pad_gap="#padding_small">
        <!-- Info labels (reactively bound to subjects) - fixed height -->
        <text_body name="mesh_dimensions_label" bind_text="bed_mesh_dimensions" style_text_align="center" width="100%"/>
        <text_small name="mesh_z_range_label" bind_text="bed_mesh_z_range" style_text_align="center" style_text_color="#text_secondary" width="100%"/>
        <!-- Canvas (3D bed mesh visualization) - grows to fill remaining space -->
        <lv_obj flex_grow="1" width="100%" style_bg_opa="0" style_pad_all="0" style_border_width="0">
          <bed_mesh name="bed_mesh_canvas" width="100%" height="100%"/>
        </lv_obj>
        <!-- Rotation controls - fixed height -->
        <lv_obj width="100%" height="84" flex_flow="column" style_pad_all="#padding_small" style_pad_gap="#padding_tiny" style_bg_color="#card_bg" style_radius="#card_radius" style_border_width="0">
          <!-- X rotation (tilt) -->
          <lv_obj width="100%" height="28" flex_flow="row" style_pad_all="0" style_pad_gap="#padding_small" style_border_width="0" style_bg_opa="0">
            <text_small name="rotation_x_label" text="Tilt: -45&#xB0;" width="100" style_text_align="left"/>
            <lv_slider name="rotation_x_slider" flex_grow="1" height="28"/>
          </lv_obj>
          <!-- Z rotation (spin) -->
          <lv_obj width="100%" height="28" flex_flow="row" style_pad_all="0" style_pad_gap="#padding_small" style_border_width="0" style_bg_opa="0">
            <text_small name="rotation_y_label" text="Spin: 45&#xB0;" width="100" style_text_align="left"/>
            <lv_slider name="rotation_z_slider" flex_grow="1" height="28"/>
          </lv_obj>
        </lv_obj>
      </lv_obj>
    </lv_obj>
  </view>
</component>
