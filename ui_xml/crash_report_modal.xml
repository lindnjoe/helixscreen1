<!-- Crash Report Modal - Shows after crash, offers to send report -->
<!-- NOTE: Backdrop created programmatically by Modal system -->
<component>
  <view name="crash_report_modal"
        extends="ui_dialog" width="85%" height="content" align="center" flex_flow="column" style_flex_main_place="start"
        style_pad_gap="0">
    <!-- Content area -->
    <lv_obj name="content_container"
            width="100%" height="content" style_max_height="350" style_pad_left="#space_lg" style_pad_right="#space_lg"
            style_pad_top="#space_lg" style_pad_bottom="#space_lg" flex_flow="column" style_flex_cross_place="center"
            style_pad_gap="#space_md">
      <!-- Title with warning icon -->
      <lv_obj width="100%"
              height="content" flex_flow="row" style_pad_all="0" style_pad_gap="#space_sm"
              style_flex_main_place="center" style_flex_cross_place="center">
        <lv_label text="ó°€¦" style_text_font="mdi_icons_24" style_text_color="#warning"/>
        <text_heading text="HelixScreen Crashed" translation_tag="HelixScreen Crashed"/>
      </lv_obj>
      <!-- Crash details -->
      <lv_obj width="100%"
              height="content" flex_flow="column" style_pad_all="#space_sm" style_pad_gap="#space_xs"
              style_bg_opa="cover" style_bg_color="#card_bg" style_radius="#radius_md">
        <text_body width="100%" bind_text="crash_report_details" long_mode="wrap"/>
      </lv_obj>
      <!-- Status message -->
      <text_body name="status_text" width="100%" bind_text="crash_report_status" style_text_align="center"/>
      <!-- QR container (hidden initially) -->
      <lv_obj name="qr_container"
              width="200" height="200" style_flex_main_place="center" style_flex_cross_place="center">
        <bind_flag_if_eq subject="crash_report_show_qr" flag="hidden" ref_value="0"/>
      </lv_obj>
    </lv_obj>
    <!-- Divider -->
    <divider_horizontal/>
    <!-- Button row -->
    <lv_obj width="100%" height="#button_height" style_pad_all="0" style_pad_gap="0" flex_flow="row">
      <ui_button name="modal_cancel_btn"
                 height="100%" text="Dismiss" translation_tag="Dismiss" flex_grow="1" style_radius="0">
        <event_cb trigger="clicked" callback="on_crash_report_dismiss"/>
      </ui_button>
      <divider_vertical/>
      <ui_button name="modal_send_btn"
                 height="100%" text="Send Report" translation_tag="Send Report" flex_grow="1" style_radius="0"
                 variant="primary">
        <event_cb trigger="clicked" callback="on_crash_report_send"/>
      </ui_button>
    </lv_obj>
  </view>
</component>
