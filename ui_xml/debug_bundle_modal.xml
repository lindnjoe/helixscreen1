<!-- Debug Bundle Modal - Upload diagnostic data for support -->
<!-- NOTE: Backdrop created programmatically by Modal system -->
<component>
  <view name="debug_bundle_modal"
        extends="ui_dialog" width="85%" height="content" align="center" flex_flow="column" style_flex_main_place="start"
        style_pad_gap="0">
    <!-- Content area -->
    <lv_obj name="content_container"
            width="100%" height="content" style_max_height="400" style_pad_left="#space_lg" style_pad_right="#space_lg"
            style_pad_top="#space_lg" style_pad_bottom="#space_lg" flex_flow="column" style_flex_cross_place="center"
            style_pad_gap="#space_md">

      <!-- STATE 0: Consent -->
      <lv_obj name="consent_container"
              width="100%" height="content" flex_flow="column" style_pad_all="0" style_pad_gap="#space_md">
        <bind_flag_if_not_eq subject="debug_bundle_state" flag="hidden" ref_value="0"/>
        <!-- Title with bug icon -->
        <lv_obj width="100%"
                height="content" flex_flow="row" style_pad_all="0" style_pad_gap="#space_sm"
                style_flex_main_place="center" style_flex_cross_place="center">
          <icon src="bug" size="md" variant="primary"/>
          <text_heading text="Upload Debug Bundle" translation_tag="Upload Debug Bundle"/>
        </lv_obj>
        <text_body width="100%"
                   text="This will collect system info, logs, settings, and printer data to help diagnose issues. No passwords or sensitive data will be included."
                   translation_tag="This will collect system info, logs, settings, and printer data to help diagnose issues. No passwords or sensitive data will be included."
                   long_mode="wrap" style_text_align="center"/>
        <!-- Toggle for klipper/moonraker logs -->
        <lv_obj width="100%"
                height="content" flex_flow="row" style_pad_all="#space_sm" style_pad_gap="#space_sm"
                style_bg_opa="cover" style_bg_color="#card_bg" style_radius="#radius_md"
                style_flex_main_place="space_between" style_flex_cross_place="center">
          <text_body text="Include Klipper/Moonraker logs" translation_tag="Include Klipper/Moonraker logs"/>
          <ui_switch name="include_logs_switch" bind_checked="debug_bundle_include_logs"/>
        </lv_obj>
      </lv_obj>

      <!-- STATE 1: Uploading -->
      <lv_obj name="uploading_container"
              width="100%" height="content" flex_flow="column" style_pad_all="0" style_pad_gap="#space_md"
              style_flex_cross_place="center">
        <bind_flag_if_not_eq subject="debug_bundle_state" flag="hidden" ref_value="1"/>
        <lv_spinner width="48" height="48"/>
        <text_body bind_text="debug_bundle_status" style_text_align="center"/>
      </lv_obj>

      <!-- STATE 2: Success -->
      <lv_obj name="success_container"
              width="100%" height="content" flex_flow="column" style_pad_all="0" style_pad_gap="#space_md"
              style_flex_cross_place="center">
        <bind_flag_if_not_eq subject="debug_bundle_state" flag="hidden" ref_value="2"/>
        <icon src="check_circle" size="lg" variant="success"/>
        <text_heading text="Bundle Uploaded" translation_tag="Bundle Uploaded"/>
        <text_body text="Share this code in Discord or support:"
                   translation_tag="Share this code in Discord or support:" style_text_align="center"/>
        <!-- Large share code display -->
        <lv_obj width="100%"
                height="content" style_pad_all="#space_md" style_bg_opa="cover" style_bg_color="#card_bg"
                style_radius="#radius_md" style_flex_main_place="center" style_flex_cross_place="center" flex_flow="row">
          <lv_label name="share_code_display"
                    bind_text="debug_bundle_share_code" style_text_font="noto_sans_bold_28" style_text_color="#primary"
                    style_text_align="center"/>
        </lv_obj>
      </lv_obj>

      <!-- STATE 3: Error -->
      <lv_obj name="error_container"
              width="100%" height="content" flex_flow="column" style_pad_all="0" style_pad_gap="#space_md"
              style_flex_cross_place="center">
        <bind_flag_if_not_eq subject="debug_bundle_state" flag="hidden" ref_value="3"/>
        <icon src="alert_circle" size="lg" variant="danger"/>
        <text_heading text="Upload Failed" translation_tag="Upload Failed"/>
        <text_body bind_text="debug_bundle_error" long_mode="wrap" style_text_align="center"/>
      </lv_obj>
    </lv_obj>

    <!-- Divider -->
    <divider_horizontal/>

    <!-- Button rows - different per state -->
    <!-- State 0: Upload + Cancel -->
    <lv_obj name="consent_buttons"
            width="100%" height="#button_height" style_pad_all="0" style_pad_gap="0" flex_flow="row">
      <bind_flag_if_not_eq subject="debug_bundle_state" flag="hidden" ref_value="0"/>
      <ui_button height="100%" text="Cancel" translation_tag="Cancel" flex_grow="1" style_radius="0">
        <event_cb trigger="clicked" callback="on_debug_bundle_cancel"/>
      </ui_button>
      <divider_vertical/>
      <ui_button height="100%" text="Upload" translation_tag="Upload" flex_grow="1" style_radius="0" variant="primary">
        <event_cb trigger="clicked" callback="on_debug_bundle_upload"/>
      </ui_button>
    </lv_obj>

    <!-- State 2: Done button -->
    <lv_obj name="success_buttons"
            width="100%" height="#button_height" style_pad_all="0" style_pad_gap="0" flex_flow="row">
      <bind_flag_if_not_eq subject="debug_bundle_state" flag="hidden" ref_value="2"/>
      <ui_button height="100%" text="Done" translation_tag="Done" flex_grow="1" style_radius="0" variant="primary">
        <event_cb trigger="clicked" callback="on_debug_bundle_done"/>
      </ui_button>
    </lv_obj>

    <!-- State 3: Close button -->
    <lv_obj name="error_buttons"
            width="100%" height="#button_height" style_pad_all="0" style_pad_gap="0" flex_flow="row">
      <bind_flag_if_not_eq subject="debug_bundle_state" flag="hidden" ref_value="3"/>
      <ui_button height="100%" text="Close" translation_tag="Close" flex_grow="1" style_radius="0">
        <event_cb trigger="clicked" callback="on_debug_bundle_close"/>
      </ui_button>
    </lv_obj>
  </view>
</component>
