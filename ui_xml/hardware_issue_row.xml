<!-- Hardware Issue Row - Displays a single hardware validation issue -->
<!-- Styled to match notification_history_item with 4px left border and severity icon -->
<!-- After creating, call ui_severity_card_finalize(row) to show correct icon -->
<component>
  <api>
    <prop name="severity" type="string"/>
    <!-- "error", "warning", "info" -->
  </api>
  <!-- Card with colored left border (severity_card handles border color based on severity) -->
  <view name="hardware_issue_row"
        extends="severity_card" width="100%" height="content" severity="$severity" style_pad_left="#space_md"
        style_pad_right="#space_md" style_pad_top="#space_sm" style_pad_bottom="#space_sm" style_bg_color="#card_bg"
        style_bg_opa="255" style_border_width="4" style_border_side="left" style_radius="#border_radius"
        scrollable="false" flex_flow="row" style_flex_main_place="start" style_flex_cross_place="start"
        style_pad_gap="#space_md">
    <!-- Icon column (fixed width for severity icon) -->
    <lv_obj width="28"
            height="content" style_bg_opa="0" style_border_width="0" style_pad_all="0" style_pad_top="#space_xxs"
            scrollable="false">
      <!-- Severity icons - all hidden by default, finalize() shows the correct one -->
      <lv_label name="icon_info"
                text="#icon_info_circle" hidden="true" style_text_font="mdi_icons_24" style_text_color="#info"/>
      <lv_label name="icon_success"
                text="#icon_check" hidden="true" style_text_font="mdi_icons_24" style_text_color="#success"/>
      <lv_label name="icon_warning"
                text="#icon_triangle_exclamation" hidden="true" style_text_font="mdi_icons_24"
                style_text_color="#warning"/>
      <lv_label name="icon_error"
                text="#icon_triangle_exclamation" hidden="true" style_text_font="mdi_icons_24"
                style_text_color="#danger"/>
    </lv_obj>
    <!-- Content column -->
    <lv_obj height="content"
            flex_grow="1" style_bg_opa="0" style_border_width="0" style_pad_all="0" style_pad_right="#space_md"
            scrollable="false" flex_flow="column" style_pad_gap="#space_xxs">
      <text_body name="hardware_name" width="100%" text="Hardware Name" style_text_color="#text" long_mode="wrap"/>
      <text_small name="issue_message" width="100%" text="Issue description" long_mode="wrap"/>
    </lv_obj>
    <!-- Action buttons container (hidden by default, shown by C++ for non-critical issues) -->
    <lv_obj name="action_buttons"
            width="content" height="content" hidden="true" style_bg_opa="0" style_border_width="0" style_pad_all="0"
            flex_flow="row" style_pad_gap="#space_xs" scrollable="false" style_flex_cross_place="center">
      <!-- Ignore button (mark as optional) -->
      <lv_button name="ignore_btn"
                 width="content" height="#button_height" style_min_width="64" style_radius="#border_radius_small"
                 style_border_width="1" style_border_color="#text_muted" style_bg_opa="0" style_pad_left="#space_md"
                 style_pad_right="#space_md" style_pad_top="0" style_pad_bottom="0">
        <text_small name="ignore_label" text="Ignore" align="center"/>
      </lv_button>
      <!-- Save button (add to expected list) - only for INFO severity -->
      <lv_button name="save_btn"
                 width="content" height="#button_height" hidden="true" style_min_width="64"
                 style_radius="#border_radius_small" style_border_width="0" style_bg_color="#success"
                 style_pad_left="#space_md" style_pad_right="#space_md" style_pad_top="0" style_pad_bottom="0">
        <text_small name="save_label" text="Save" style_text_color="#text" align="center"/>
      </lv_button>
    </lv_obj>
  </view>
</component>
