<component>
  <!-- Component-local constants for theme-aware colors and dimensions -->
  <consts>
    <!-- Light icon color when light is ON (bright yellow) -->
    <color name="light_icon_on" value="#FFD700"/>
    <!-- Light icon color when light is OFF (muted gray) -->
    <color name="light_icon_off" value="#808080"/>
    <!-- Component-specific dimensions (home panel layout) -->
    <px name="accent_bar_width" value="4"/>
    <px name="accent_bar_gap" value="18"/>
    <!-- Printer image container: percentage of parent for responsive sizing -->
    <percentage name="printer_container_width" value="40%"/>
  </consts>
  <!-- Now references global constants from globals.xml -->
  <view extends="lv_obj" width="100%" height="100%" style_pad_all="0" style_border_width="0" flex_flow="column">
    <!-- Top section: Printer visualization + Tip (60% of height via flex_grow="3") -->
    <lv_obj width="100%" flex_grow="3" style_bg_opa="0%" style_border_width="0" style_pad_all="#space_lg" flex_flow="row" style_flex_main_place="center" style_flex_cross_place="center" scrollable="false">
      <!-- Printer Image Container: fixed percentage width, image scales to fit via inner_align="contain" -->
      <lv_obj name="printer_container" width="#printer_container_width" height="100%" style_bg_opa="0%" style_border_width="0" style_pad_all="0" scrollable="false">
        <lv_image name="printer_image" src="A:assets/images/printer_400.png" width="100%" height="100%" inner_align="contain"/>
        <!-- Disconnected overlay - shown when NOT connected (state != 2) -->
        <icon name="disconnected_overlay" src="prohibited" size="xl" align="center" color="#error_color">
          <lv_obj-bind_flag_if_eq subject="printer_connection_state" flag="hidden" ref_value="2"/>
        </icon>
      </lv_obj>
      <!-- Status Message with accent bar (flex-grows to fill remaining horizontal space) -->
      <lv_obj flex_grow="1" style_bg_opa="0%" style_border_width="0" style_pad_all="0" flex_flow="row" style_flex_cross_place="center" style_pad_gap="#accent_bar_gap">
        <!-- Vertical accent bar (height fills container) -->
        <lv_obj name="status_accent_bar" width="#accent_bar_width" height="100%" style_bg_color="#primary_color" style_bg_opa="255" style_radius="2" style_border_width="0" style_pad_all="0"/>
        <!-- Status text container with padding for breathing room -->
        <lv_obj flex_grow="1" style_bg_opa="0%" style_border_width="0" style_pad_ver="8" style_pad_hor="0" flex_flow="row" style_pad_gap="#space_sm" clickable="true">
          <event_cb trigger="clicked" callback="tip_text_clicked_cb"/>
          <!-- "Tip: " prefix -->
          <text_heading text="Tip:"/>
          <!-- Tip text (bound to subject) -->
          <text_heading name="status_text_label" bind_text="status_text" flex_grow="1" long_mode="wrap"/>
          <!-- Question mark icon -->
          <lv_label text="#icon_question_circle" style_text_font="mdi_icons_24"/>
        </lv_obj>
      </lv_obj>
    </lv_obj>
    <!-- Bottom section: Info cards (40% of height via flex_grow="2", balances with top section's flex_grow="3") -->
    <lv_obj width="100%" flex_grow="2" style_bg_opa="0%" style_border_width="0" style_pad_all="#space_lg" flex_flow="row" style_pad_gap="#space_md" style_flex_cross_place="stretch" scrollable="false">
      <!-- Print Files Card - Benchy thumbnail + text in horizontal layout -->
      <lv_button name="print_card" width="content" height="100%" style_radius="#border_radius" style_border_width="0" style_pad_all="#space_lg" style_shadow_width="0" flex_flow="row" style_flex_main_place="center" style_flex_cross_place="center" style_flex_track_place="center" style_pad_gap="#space_sm">
        <!-- Benchy thumbnail - white silhouette for dark theme -->
        <lv_image src="A:assets/images/benchy_thumbnail_white.png" width="content" height="100%" inner_align="contain"/>
        <text_body text="Print Files"/>
        <event_cb trigger="clicked" callback="print_card_clicked_cb"/>
      </lv_button>
      <!-- Status Card (Temperature, Network, Light) - uses flex to distribute space evenly -->
      <ui_card name="status_card" flex_grow="2" height="100%" style_radius="#border_radius" style_pad_all="#space_md" flex_flow="row" style_flex_cross_place="center">
        <!-- Temperature display - icon on top, text below -->
        <lv_obj flex_grow="1" height="100%" style_bg_opa="0%" style_border_width="0" style_pad_all="0" flex_flow="column" style_flex_main_place="center" style_flex_cross_place="center">
          <icon name="temp_icon" src="heater" variant="secondary"/>
          <text_body name="temp_text_label" bind_text="temp_text" style_text_align="center" width="100%"/>
        </lv_obj>
        <!-- Vertical divider (80% height for visual breathing room) -->
        <lv_obj name="divider1" width="1" height="80%" style_bg_color="#text_secondary" style_bg_opa="50%" style_border_width="0" style_pad_all="0"/>
        <!-- Network status - icon on top, label below (centered) -->
        <!-- Icons switch based on network_icon_state: 0=disconnected, 1-4=wifi strength, 5=ethernet -->
        <lv_obj flex_grow="1" height="100%" style_bg_opa="0%" style_border_width="0" style_pad_all="0" flex_flow="column" style_flex_main_place="center" style_flex_cross_place="center">
          <!-- Disconnected (state 0) -->
          <icon name="net_disconnected" src="wifi_off" size="lg" variant="disabled">
            <lv_obj-bind_flag_if_not_eq subject="network_icon_state" flag="hidden" ref_value="0"/>
          </icon>
          <!-- WiFi strength 1 - weak (state 1) - warning color -->
          <icon name="net_wifi_1" src="wifi_strength_1_alert" size="lg" variant="warning" hidden="true">
            <lv_obj-bind_flag_if_not_eq subject="network_icon_state" flag="hidden" ref_value="1"/>
          </icon>
          <!-- WiFi strength 2 - fair (state 2) -->
          <icon name="net_wifi_2" src="wifi_strength_2" size="lg" variant="accent" hidden="true">
            <lv_obj-bind_flag_if_not_eq subject="network_icon_state" flag="hidden" ref_value="2"/>
          </icon>
          <!-- WiFi strength 3 - good (state 3) -->
          <icon name="net_wifi_3" src="wifi_strength_3" size="lg" variant="accent" hidden="true">
            <lv_obj-bind_flag_if_not_eq subject="network_icon_state" flag="hidden" ref_value="3"/>
          </icon>
          <!-- WiFi strength 4 - strong (state 4) -->
          <icon name="net_wifi_4" src="wifi_strength_4" size="lg" variant="accent" hidden="true">
            <lv_obj-bind_flag_if_not_eq subject="network_icon_state" flag="hidden" ref_value="4"/>
          </icon>
          <!-- Ethernet (state 5) -->
          <icon name="net_ethernet" src="ethernet" size="lg" variant="accent" hidden="true">
            <lv_obj-bind_flag_if_not_eq subject="network_icon_state" flag="hidden" ref_value="5"/>
          </icon>
          <text_body name="network_label" bind_text="network_label" style_text_align="center" width="100%"/>
        </lv_obj>
        <!-- Vertical divider (hidden if no LED capability) -->
        <lv_obj name="divider2" width="1" height="80%" style_bg_color="#text_secondary" style_bg_opa="50%" style_border_width="0" style_pad_all="0">
          <lv_obj-bind_flag_if_eq subject="printer_has_led" flag="hidden" ref_value="0"/>
        </lv_obj>
        <!-- Light control button - uses two icons with conditional visibility for reactive on/off state -->
        <!-- Hidden if printer doesn't have LED capability -->
        <lv_button name="light_button" flex_grow="1" height="100%" style_bg_opa="0%" style_border_width="0" style_pad_all="0" style_shadow_width="0">
          <lv_obj-bind_flag_if_eq subject="printer_has_led" flag="hidden" ref_value="0"/>
          <!-- OFF state icon (gray) - visible when led_state == 0 -->
          <icon name="light_icon_off" src="light" align="center" color="#light_icon_off">
            <lv_obj-bind_flag_if_not_eq subject="led_state" flag="hidden" ref_value="0"/>
          </icon>
          <!-- ON state icon (gold) - visible when led_state == 1 -->
          <icon name="light_icon_on" src="light" align="center" color="#light_icon_on">
            <lv_obj-bind_flag_if_eq subject="led_state" flag="hidden" ref_value="0"/>
          </icon>
          <event_cb trigger="clicked" callback="light_toggle_cb"/>
        </lv_button>
      </ui_card>
    </lv_obj>
  </view>
</component>
