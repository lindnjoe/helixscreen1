<component>
  <!-- Vertical Navigation Bar with Reactive Icon Highlighting + Status Icons at Bottom -->
  <view extends="lv_obj" width="#nav_width" height="100%" style_pad_all="0" style_border_width="1" style_radius="0" flex_flow="column" scrollable="false" scrollbar_mode="off">
    <lv_obj width="100%" flex_grow="1" flex_flow="column" style_flex_track_place="center" style_flex_cross_place="center" style_pad_all="0" style_pad_top="#space_sm" style_border_width="0" style_border_color="0xaaaaaa" scrollable="false" scrollbar_mode="off">
      <!-- Home Button (Panel 0) -->
      <lv_button name="nav_btn_home" style_bg_opa="0" style_shadow_width="0" style_border_width="0" style_radius="0" style_pad_all="0">
        <icon name="nav_icon_home" src="home" size="lg"/>
      </lv_button>
      <!-- Controls Button (Panel 1) -->
      <lv_button name="nav_btn_controls" style_bg_opa="0" style_shadow_width="0" style_border_width="0" style_radius="0" style_pad_all="0">
        <icon name="nav_icon_controls" src="fine_tune" size="lg"/>
      </lv_button>
      <!-- Filament Button (Panel 2) -->
      <lv_button name="nav_btn_filament" style_bg_opa="0" style_shadow_width="0" style_border_width="0" style_radius="0" style_pad_all="0">
        <icon name="nav_icon_filament" src="filament" size="lg"/>
      </lv_button>
      <!-- Settings Button (Panel 3) -->
      <lv_button name="nav_btn_settings" style_bg_opa="0" style_shadow_width="0" style_border_width="0" style_radius="0" style_pad_all="0">
        <icon name="nav_icon_settings" src="settings" size="lg"/>
      </lv_button>
      <!-- Advanced Button (Panel 4) -->
      <lv_button name="nav_btn_advanced" style_bg_opa="0" style_shadow_width="0" style_border_width="0" style_radius="0" style_pad_all="0">
        <icon name="nav_icon_advanced" src="dots_vertical" size="lg"/>
      </lv_button>
      <lv_obj width="100%" height="2" style_margin_top="#space_xs" style_margin_bottom="#space_xs" style_margin_left="#space_xs" style_margin_right="#space_xs"/>
      <!-- Status Icons - smaller height (50px vs 70px nav) for tighter visual density -->
      <!-- Names must match what ui_status_bar_init() expects for reactive coloring -->
      <!-- Printer Status Button (wrapped in lv_obj for consistent layout) -->
      <lv_button name="status_btn_printer" style_bg_opa="0" style_shadow_width="0" style_border_width="0" style_radius="0" style_pad_all="0">
        <icon name="status_printer_icon" src="printer_3d" size="sm"/>
      </lv_button>
      <!-- Network Status Button (wrapped in lv_obj for consistent layout) -->
      <lv_button name="status_btn_network" style_bg_opa="0" style_shadow_width="0" style_border_width="0" style_radius="0" style_pad_all="0">
        <icon name="status_network_icon" src="lan" size="sm"/>
      </lv_button>
      <!-- Notification Button with Badge -->
      <!-- Fixed height prevents layout recalculation from causing scrollbar -->
      <lv_obj name="status_notification_history_container" width="100%" height="48" style_bg_opa="0" style_border_width="0" style_pad_all="0" scrollable="false">
        <lv_button name="status_btn_notification" align="center" style_bg_opa="0" style_shadow_width="0" style_border_width="0" style_radius="0" style_pad_all="0" style_pad_bottom="28">
          <event_cb trigger="clicked" callback="status_notification_history_clicked"/>
          <icon name="status_notification_icon" src="notifications" size="sm" align="center"/>
        </lv_button>
        <!-- Notification Count Badge - positioned to overlap top-right of centered icon -->
        <!-- Icon is 32px centered in container, badge overlaps top-right corner -->
        <!-- Badge is clickable and triggers same handler as bell icon -->
        <lv_obj name="notification_badge" width="18" height="18" align="center" x="10" y="-14" style_radius="9" style_bg_color="#error_color" style_border_width="0" style_pad_all="0" hidden="true" scrollable="false" clickable="true">
          <event_cb trigger="clicked" callback="status_notification_history_clicked"/>
          <text_small name="notification_badge_count" style_pad_top="0" align="center" style_text_color="#ffffff"/>
        </lv_obj>
      </lv_obj>
    </lv_obj>
  </view>
</component>
