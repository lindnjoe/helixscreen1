<!-- Numeric Keypad Overlay - Matches motion_panel structure exactly -->
<component>
  <consts>
    <px name="keypad_width" value="280"/>
  </consts>
  <api>
    <prop type="string" name="unit_label" default=""/>
    <prop type="string" name="title" default="Enter Value"/>
  </api>
  <!-- Panel structure matches motion_panel exactly -->
  <view extends="lv_obj" name="keypad_panel" width="#keypad_width" height="100%" align="right_mid" style_pad_all="0" style_border_width="0" style_bg_opa="255" style_bg_color="#card_bg" scrollable="false" flex_flow="column" hidden="true">
    <header_bar name="overlay_header" title="$title" action_button_text="OK" hide_action_button="false"/>
    <!-- Content: flex_grow fills remaining space (like motion_panel overlay_content) -->
    <lv_obj name="overlay_content" flex_grow="1" width="100%" style_bg_opa="0" style_pad_all="#space_sm" scrollable="false" style_border_width="0" flex_flow="column" style_pad_gap="#space_xs">
      <!-- Input Display -->
      <lv_obj width="100%" height="content" style_radius="#border_radius" style_pad_all="#space_sm" style_border_width="0" scrollable="false" flex_flow="row" flex_align="center,center,center">
        <lv_label name="input_display" style_text_font="montserrat_28" style_text_align="center" scrollable="false">
          <lv_label-bind_text subject="keypad_display"/>
        </lv_label>
        <lv_label name="input_unit" text="$unit_label" style_text_font="montserrat_28" scrollable="false" style_pad_left="#space_xs"/>
      </lv_obj>
      <!-- Button Grid: flex_grow="1" fills remaining vertical space -->
      <lv_obj name="keypad_grid" flex_grow="1" width="100%" style_bg_opa="0" style_border_width="0" style_pad_all="0" scrollable="false" flex_flow="column" style_pad_gap="#space_xxs">
        <!-- Row 1 -->
        <lv_obj flex_grow="1" width="100%" style_bg_opa="0" style_border_width="0" scrollable="false" flex_flow="row" style_pad_gap="#space_xxs" style_flex_cross_place="stretch">
          <lv_button name="btn_7" flex_grow="1" style_radius="#border_radius"><text_heading text="7" align="center"/></lv_button>
          <lv_button name="btn_8" flex_grow="1" style_radius="#border_radius"><text_heading text="8" align="center"/></lv_button>
          <lv_button name="btn_9" flex_grow="1" style_radius="#border_radius"><text_heading text="9" align="center"/></lv_button>
        </lv_obj>
        <!-- Row 2 -->
        <lv_obj flex_grow="1" width="100%" style_bg_opa="0" style_border_width="0" scrollable="false" flex_flow="row" style_pad_gap="#space_xxs" style_flex_cross_place="stretch">
          <lv_button name="btn_4" flex_grow="1" style_radius="#border_radius"><text_heading text="4" align="center"/></lv_button>
          <lv_button name="btn_5" flex_grow="1" style_radius="#border_radius"><text_heading text="5" align="center"/></lv_button>
          <lv_button name="btn_6" flex_grow="1" style_radius="#border_radius"><text_heading text="6" align="center"/></lv_button>
        </lv_obj>
        <!-- Row 3 -->
        <lv_obj flex_grow="1" width="100%" style_bg_opa="0" style_border_width="0" scrollable="false" flex_flow="row" style_pad_gap="#space_xxs" style_flex_cross_place="stretch">
          <lv_button name="btn_1" flex_grow="1" style_radius="#border_radius"><text_heading text="1" align="center"/></lv_button>
          <lv_button name="btn_2" flex_grow="1" style_radius="#border_radius"><text_heading text="2" align="center"/></lv_button>
          <lv_button name="btn_3" flex_grow="1" style_radius="#border_radius"><text_heading text="3" align="center"/></lv_button>
        </lv_obj>
        <!-- Row 4 -->
        <lv_obj flex_grow="1" width="100%" style_bg_opa="0" style_border_width="0" scrollable="false" flex_flow="row" style_pad_gap="#space_xxs" style_flex_cross_place="stretch">
          <lv_obj flex_grow="1" style_bg_opa="0" style_border_width="0"/>
          <lv_button name="btn_0" flex_grow="1" style_radius="#border_radius"><text_heading text="0" align="center"/></lv_button>
          <lv_button name="btn_backspace" flex_grow="1" style_radius="#border_radius"><lv_label text="#icon_backspace" style_text_font="#icon_font_md" align="center"/></lv_button>
        </lv_obj>
      </lv_obj>
    </lv_obj>
  </view>
</component>
