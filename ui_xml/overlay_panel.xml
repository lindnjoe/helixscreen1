<component>
  <!-- Reusable Overlay Panel Wrapper Component -->
  <!-- Provides consistent positioning and header for all overlay panels -->
  <!-- Uses shared backdrop from navigation system (ui_nav.cpp) -->
  <!-- Usage Pattern:
       <overlay_panel name="my_panel" title="My Panel">
         <lv_obj name="overlay_content" width="100%" flex_grow="1" style_bg_opa="0"
                 style_pad_all="#space_lg" style_border_width="0" flex_flow="column">
           [panel-specific controls]
         </lv_obj>
       </overlay_panel>
  -->
  <!-- API Properties -->
  <api>
    <prop name="title" type="string" default="Overlay"/>
    <prop name="action_button_text" type="string" default=""/>
    <prop name="hide_action_button" type="string" default="true"/>
    <prop name="width" type="string" default="#overlay_panel_width"/>
    <prop name="bg_color" type="string" default="#card_bg"/>
  </api>
  <!-- Outer container with consistent overlay panel styling -->
  <view extends="lv_obj"
        width="$width" height="100%" align="right_mid" style_pad_all="0" style_border_width="0" style_bg_opa="255"
        style_bg_color="$bg_color" scrollable="false" flex_flow="column">
    <!-- Header Bar -->
    <header_bar name="overlay_header"
                title="$title" action_button_text="$action_button_text" hide_action_button="$hide_action_button"/>
    <!-- Panel-specific overlay_content and children go here -->
  </view>
</component>
