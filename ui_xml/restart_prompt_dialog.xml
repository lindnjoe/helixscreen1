<!-- Restart Prompt Dialog -->
<!-- Shown when settings that require restart are changed -->
<!-- User can restart now or dismiss and restart later -->
<component>
  <!-- Full-screen backdrop overlay -->
  <view name="restart_prompt_backdrop"
        extends="lv_obj" width="100%" height="100%" style_bg_opa="180" style_border_width="0" style_pad_all="0"
        style_radius="0" align="center" clickable="true">
    <!-- Dialog card (centered) -->
    <lv_obj width="400"
            height="200" align="center" style_radius="#border_radius" style_pad_all="#space_2xl" flex_flow="column"
            style_flex_main_place="space_between">
      <!-- Title and message section -->
      <lv_obj width="100%" height="content" style_pad_all="0" flex_flow="column" style_flex_cross_place="center">
        <!-- Icon -->
        <icon src="refresh" size="lg" variant="primary" style_margin_bottom="#space_md"/>
        <!-- Title -->
        <text_heading name="dialog_title"
                      width="352" height="28" text="Restart Required" style_text_align="center" style_pad_all="0"/>
        <!-- Message -->
        <text_muted name="dialog_message"
                    width="352" height="content" text="Some settings will take effect after restart."
                    style_text_align="center" style_pad_all="0" style_pad_top="#space_md" long_mode="wrap"/>
      </lv_obj>
      <!-- Button row -->
      <lv_obj width="100%"
              height="#button_height" style_pad_all="0" flex_flow="row" style_flex_main_place="space_between"
              style_pad_gap="#space_lg">
        <!-- Later button -->
        <ui_button name="dialog_later_btn" width="160" text="Later" variant="secondary">
          <event_cb trigger="clicked" callback="on_restart_later_clicked"/>
        </ui_button>
        <!-- Restart Now button (primary action) -->
        <ui_button name="dialog_restart_btn" width="160" text="Restart Now">
          <event_cb trigger="clicked" callback="on_restart_now_clicked"/>
        </ui_button>
      </lv_obj>
    </lv_obj>
  </view>
</component>
