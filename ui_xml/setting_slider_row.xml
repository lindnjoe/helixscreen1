<!-- Reusable Settings Slider Row Component -->
<!-- Creates a settings row with label, description, and an inline slider -->
<!-- Usage: <setting_slider_row label="Scroll Speed" icon="mat_swipe" description="Higher = faster" min="1" max="100" value="50"/> -->
<!-- Props:
     - label: Primary label text
     - icon: Optional left icon (e.g., "mat_swipe"). If empty, no icon shown.
     - description: Optional secondary description text below label
     - min: Slider minimum value (default: 0)
     - max: Slider maximum value (default: 100)
     - value: Initial slider value (default: 50)
-->
<!-- Note: Parent C++ code attaches value_changed handler to "slider" by name -->
<component>
  <api>
    <prop type="string" name="label" default="Setting"/>
    <prop type="string" name="icon" default=""/>
    <prop type="string" name="description" default=""/>
    <prop type="string" name="min" default="0"/>
    <prop type="string" name="max" default="100"/>
    <prop type="string" name="value" default="50"/>
  </api>
  <view extends="lv_obj" name="slider_row" width="100%" height="content" flex_flow="column"
        style_bg_opa="0" style_border_width="0"
        style_pad_left="#padding_normal" style_pad_right="#padding_normal"
        style_pad_top="#padding_small" style_pad_bottom="#padding_small"
        style_pad_gap="#gap_tiny" scrollable="false">

    <!-- Top row: Icon, label, value display -->
    <lv_obj width="100%" height="content" flex_flow="row"
            style_flex_main_place="space_between" style_flex_cross_place="center"
            style_bg_opa="0" style_border_width="0" style_pad_all="0" scrollable="false">

      <!-- Left side: Icon and label -->
      <lv_obj width="content" height="content" flex_flow="row"
              style_flex_cross_place="center" style_pad_gap="#gap_small"
              style_bg_opa="0" style_border_width="0" style_pad_all="0" scrollable="false">
        <icon name="row_icon" src="$icon" size="sm" variant="secondary"/>
        <lv_label name="label" text="$label" style_text_font="#font_body" style_text_color="#text_primary"/>
      </lv_obj>

      <!-- Right side: Current value -->
      <lv_label name="value_label" text="$value" style_text_font="#font_body" style_text_color="#text_secondary"/>
    </lv_obj>

    <!-- Description (if provided) -->
    <lv_label name="description" text="$description" style_text_font="#font_small" style_text_color="#text_secondary"/>

    <!-- Slider -->
    <lv_slider name="slider" width="100%" min_value="$min" max_value="$max" value="$value"
               style_margin_top="#padding_tiny"/>
  </view>
</component>
