<component>
  <view name="spoolman_spool_row"
        extends="lv_obj" width="100%" height="content" style_bg_color="#surface_bg" style_bg_opa="255"
        style_radius="#radius_md" style_pad_all="#space_md" style_border_width="0" scrollable="false" flex_flow="row"
        style_flex_cross_place="center" style_pad_gap="#space_md">
    <!-- 3D Spool Canvas (shows fill level visually) -->
    <spool_canvas name="spool_canvas" size="48" color="0x808080" fill_level="0.5"/>
    <!-- Info Column -->
    <lv_obj name="info_column"
            width="content" height="content" flex_grow="1" style_bg_opa="0" style_border_width="0" style_pad_all="0"
            scrollable="false" flex_flow="column" style_pad_gap="#space_xs">
      <!-- Material + Color Name -->
      <text_body name="spool_name" text="PLA - Black" style_text_color="#text_primary"/>
      <!-- Vendor -->
      <text_small name="spool_vendor" text="Polymaker" style_text_color="#text_secondary"/>
    </lv_obj>
    <!-- Weight Column (right side) -->
    <lv_obj name="weight_column"
            width="80" height="content" style_bg_opa="0" style_border_width="0" style_pad_all="0" scrollable="false"
            flex_flow="column" style_flex_cross_place="end" style_pad_gap="#space_xs">
      <!-- Remaining Weight -->
      <text_body name="weight_text" text="850g" style_text_color="#text_primary" style_text_align="right"/>
      <!-- Percentage -->
      <text_small name="percent_text" text="85%" style_text_color="#text_secondary" style_text_align="right"/>
    </lv_obj>
    <!-- Active Indicator (checkmark, hidden by default) -->
    <icon name="active_indicator" src="mdi_check_circle" size="sm" variant="success" hidden="true"/>
  </view>
</component>
