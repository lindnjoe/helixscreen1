<!-- Telemetry Data Overlay - Shows queued telemetry events for transparency -->
<!-- Lets users see exactly what anonymous data would be sent -->
<component>
  <view name="telemetry_data_overlay"
        extends="overlay_panel" width="#overlay_panel_width_full" title="Telemetry Data" title_tag="Telemetry Data"
        bg_color="#screen_bg">
    <!-- Content Area -->
    <lv_obj name="overlay_content"
            width="100%" flex_grow="1" style_pad_all="#space_lg" scrollable="true" flex_flow="column"
            style_pad_gap="#space_md">
      <!-- ================================================================== -->
      <!-- STATUS CARD - Shows telemetry status and event count -->
      <!-- ================================================================== -->
      <ui_card name="telemetry_status_card"
               width="100%" height="content" style_border_width="0" style_pad_all="#space_lg" scrollable="false"
               flex_flow="row" style_flex_cross_place="center" style_pad_gap="#space_md">
        <!-- Status icon -->
        <lv_obj name="status_icon_container"
                width="48" height="48" style_bg_color="#primary" style_bg_opa="255" style_radius="24" scrollable="false"
                style_pad_all="0" flex_flow="column" style_flex_main_place="center" style_flex_cross_place="center"
                style_flex_track_place="center">
          <icon name="status_icon" src="chart_line" size="md" variant="text"/>
        </lv_obj>
        <!-- Status text -->
        <lv_obj height="content" style_pad_all="0" scrollable="false" flex_flow="column" style_pad_gap="#space_xs">
          <text_heading name="telemetry_status_title" bind_text="telemetry_data_status"/>
          <text_small name="telemetry_status_detail" bind_text="telemetry_data_detail"/>
        </lv_obj>
      </ui_card>
      <!-- ================================================================== -->
      <!-- EVENT LIST HEADER -->
      <!-- ================================================================== -->
      <setting_section_header title="QUEUED EVENTS" title_tag="QUEUED EVENTS" icon="list"/>
      <!-- ================================================================== -->
      <!-- EMPTY STATE (shown when no events queued) -->
      <!-- ================================================================== -->
      <lv_obj name="empty_state"
              width="100%" height="content" style_pad_all="#space_xl" scrollable="false" flex_flow="column"
              style_flex_main_place="center" style_flex_cross_place="center" style_flex_track_place="center"
              style_pad_gap="#space_sm">
        <bind_flag_if_not_eq subject="telemetry_data_count" flag="hidden" ref_value="0"/>
        <icon src="check_circle" size="lg" variant="secondary"/>
        <text_body text="No events queued" translation_tag="No events queued" style_text_color="#text_muted"
                   style_text_align="center"/>
        <text_small text="Events appear here after sessions and prints"
                    translation_tag="Events appear here after sessions and prints" style_text_align="center"/>
      </lv_obj>
      <!-- ================================================================== -->
      <!-- EVENT LIST (populated dynamically by C++) -->
      <!-- ================================================================== -->
      <lv_obj name="event_list"
              width="100%" height="content" style_pad_all="0" scrollable="false" flex_flow="column"
              style_pad_gap="#space_sm">
        <bind_flag_if_eq subject="telemetry_data_count" flag="hidden" ref_value="0"/>
        <!-- Event cards added dynamically by C++ -->
      </lv_obj>
      <!-- ================================================================== -->
      <!-- CLEAR QUEUE BUTTON (shown when events exist) -->
      <!-- ================================================================== -->
      <lv_obj name="clear_section"
              width="100%" height="content" style_pad_all="#space_md" scrollable="false" flex_flow="column"
              style_flex_cross_place="center">
        <bind_flag_if_eq subject="telemetry_data_count" flag="hidden" ref_value="0"/>
        <ui_button name="clear_queue_btn" variant="outline" width="200" height="content">
          <text_body text="Clear All Events" translation_tag="Clear All Events" style_text_align="center"
                     clickable="false" event_bubble="true"/>
          <event_cb trigger="clicked" callback="on_telemetry_clear_queue"/>
        </ui_button>
      </lv_obj>
      <!-- ================================================================== -->
      <!-- INFO NOTE -->
      <!-- ================================================================== -->
      <info_note icon="info"
                 text="This is exactly the data that will be sent" translation_tag="This is exactly the data that will be sent"
                 style_pad_left="0" style_pad_right="0">
        <bind_flag_if_eq subject="settings_telemetry_enabled" flag="hidden" ref_value="0"/>
      </info_note>
      <info_note icon="info"
                 text="This is what data would be sent if enabled" translation_tag="This is what data would be sent if enabled"
                 style_pad_left="0" style_pad_right="0">
        <bind_flag_if_not_eq subject="settings_telemetry_enabled" flag="hidden" ref_value="0"/>
      </info_note>
    </lv_obj>
  </view>
</component>
