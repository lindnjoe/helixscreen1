<component>
  <!-- First-Run Wizard: Language Selection -->
  <!-- Cycling "Welcome!" animation with scrollable language list -->
  <consts>
    <str name="step_title" value="Printer Setup: Language" value_tag="Printer Setup: Language"/>
    <str name="step_subtitle" value="Select your preferred language" value_tag="Select your preferred language"/>
    <int name="step_order" value="1"/>
  </consts>
  <view name="wizard_language_chooser_root"
        extends="lv_obj" width="100%" height="100%" style_bg_opa="0" style_border_width="0" style_pad_all="0"
        flex_flow="column" style_flex_main_place="start" style_flex_cross_place="center">

    <ui_card width="100%"
             flex_grow="1" style_radius="#border_radius" style_pad_all="#space_lg" style_pad_gap="#space_md"
             flex_flow="column" style_flex_main_place="start" style_flex_cross_place="center">

      <!-- Animated Welcome Header - cycles through all supported languages -->
      <text_heading name="welcome_header" bind_text="wizard_welcome_text"
                    width="100%" style_text_align="center" style_pad_top="#space_md" style_pad_bottom="#space_lg"/>

      <!-- Language list - scrollable, centered content -->
      <lv_obj name="language_list"
              width="240" flex_grow="1"
              style_pad_all="#space_sm" style_pad_gap="#space_xs"
              style_bg_color="#screen_bg" style_bg_opa="255" style_radius="#border_radius"
              scrollable="true" flex_flow="column" style_flex_cross_place="center">

        <!-- Language items: flag icon + label in a row -->
        <lv_button name="lang_item_en" width="100%" style_bg_opa="0" style_shadow_width="0" style_border_width="0"
                   style_pad_ver="#space_sm" style_pad_hor="#space_md"
                   flex_flow="row" style_flex_cross_place="center" style_pad_gap="#space_lg">
          <lv_image src="flag_en"/>
          <text_body text="English" flex_grow="1"/>
          <event_cb trigger="clicked" callback="on_language_selected" user_data="0"/>
        </lv_button>

        <lv_button name="lang_item_de" width="100%" style_bg_opa="0" style_shadow_width="0" style_border_width="0"
                   style_pad_ver="#space_sm" style_pad_hor="#space_md"
                   flex_flow="row" style_flex_cross_place="center" style_pad_gap="#space_lg">
          <lv_image src="flag_de"/>
          <text_body text="Deutsch" flex_grow="1"/>
          <event_cb trigger="clicked" callback="on_language_selected" user_data="1"/>
        </lv_button>

        <lv_button name="lang_item_fr" width="100%" style_bg_opa="0" style_shadow_width="0" style_border_width="0"
                   style_pad_ver="#space_sm" style_pad_hor="#space_md"
                   flex_flow="row" style_flex_cross_place="center" style_pad_gap="#space_lg">
          <lv_image src="flag_fr"/>
          <text_body text="Français" flex_grow="1"/>
          <event_cb trigger="clicked" callback="on_language_selected" user_data="2"/>
        </lv_button>

        <lv_button name="lang_item_es" width="100%" style_bg_opa="0" style_shadow_width="0" style_border_width="0"
                   style_pad_ver="#space_sm" style_pad_hor="#space_md"
                   flex_flow="row" style_flex_cross_place="center" style_pad_gap="#space_lg">
          <lv_image src="flag_es"/>
          <text_body text="Español" flex_grow="1"/>
          <event_cb trigger="clicked" callback="on_language_selected" user_data="3"/>
        </lv_button>

        <lv_button name="lang_item_ru" width="100%" style_bg_opa="0" style_shadow_width="0" style_border_width="0"
                   style_pad_ver="#space_sm" style_pad_hor="#space_md"
                   flex_flow="row" style_flex_cross_place="center" style_pad_gap="#space_lg">
          <lv_image src="flag_ru"/>
          <text_body text="Русский" flex_grow="1"/>
          <event_cb trigger="clicked" callback="on_language_selected" user_data="4"/>
        </lv_button>

        <lv_button name="lang_item_pt" width="100%" style_bg_opa="0" style_shadow_width="0" style_border_width="0"
                   style_pad_ver="#space_sm" style_pad_hor="#space_md"
                   flex_flow="row" style_flex_cross_place="center" style_pad_gap="#space_lg">
          <lv_image src="flag_pt"/>
          <text_body text="Português" flex_grow="1"/>
          <event_cb trigger="clicked" callback="on_language_selected" user_data="5"/>
        </lv_button>

        <lv_button name="lang_item_it" width="100%" style_bg_opa="0" style_shadow_width="0" style_border_width="0"
                   style_pad_ver="#space_sm" style_pad_hor="#space_md"
                   flex_flow="row" style_flex_cross_place="center" style_pad_gap="#space_lg">
          <lv_image src="flag_it"/>
          <text_body text="Italiano" flex_grow="1"/>
          <event_cb trigger="clicked" callback="on_language_selected" user_data="6"/>
        </lv_button>

        <lv_button name="lang_item_zh" width="100%" style_bg_opa="0" style_shadow_width="0" style_border_width="0"
                   style_pad_ver="#space_sm" style_pad_hor="#space_md"
                   flex_flow="row" style_flex_cross_place="center" style_pad_gap="#space_lg">
          <lv_image src="flag_zh"/>
          <text_body text="中文" flex_grow="1"/>
          <event_cb trigger="clicked" callback="on_language_selected" user_data="7"/>
        </lv_button>

        <lv_button name="lang_item_ja" width="100%" style_bg_opa="0" style_shadow_width="0" style_border_width="0"
                   style_pad_ver="#space_sm" style_pad_hor="#space_md"
                   flex_flow="row" style_flex_cross_place="center" style_pad_gap="#space_lg">
          <lv_image src="flag_ja"/>
          <text_body text="日本語" flex_grow="1"/>
          <event_cb trigger="clicked" callback="on_language_selected" user_data="8"/>
        </lv_button>

      </lv_obj>
    </ui_card>
  </view>
</component>
